{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "noEmit": true,
    "isolatedModules": true,
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "src/web/**/*",
    "src/web/vite-env.d.ts",
    "src/web/chat/types/css-modules.d.ts",
    "src/types/**/*"
  ],
  "exclude": ["node_modules", "dist", "vite.config.mts"]
}
